@inherits RadzenComponent
@if (Visible)
{
    <button @ref="@Element" style="@Style" @attributes="Attributes" class="@GetCssClass()" @onclick="@OnClick" id="@GetId()">
        <i class="rzi d-flex align-items-center">menu</i>
    </button>
}
@code {
    [Parameter]
    public EventCallback<EventArgs> Click { get; set; }

    public async System.Threading.Tasks.Task OnClick(EventArgs args)
    {
        await Click.InvokeAsync(args);
    }

    protected override string GetComponentCssClass()
    {
        return "sidebar-toggle";
    }
}