@page "/drag"

@using Radzen.Blazor.Rendering

@using RadzenBlazorDemos.Data
@using RadzenBlazorDemos.Models.Northwind
@using Microsoft.EntityFrameworkCore

@inject NorthwindContext dbContext

<RadzenExample Name="Drag" Documentation="false" Heading="false">
    <div class="row my-5" style="@(start != null ? "height:300px":"")">
        <div class="col-lg-6 col-xl-4 offset-lg-3 offset-xl-4">
            <Draggable 
                DragStart=@OnDragStartEnd
                Drag=@OnDrag
                DragEnd=@OnDragStartEnd
                Style="cursor:grab;">
                <RadzenCard class="m-3" Style="@style">
                    <h3 class="h5">Contact</h3>
                    <div class="d-flex flex-row">
                        <RadzenImage Path="@order.Employee?.Photo" Class="rounded-circle float-left mr-3" Style="width: 100px; height: 100px;" ondragstart="return false" />
                        <div>
                            <div>Employee</div>
                            <b>@(order.Employee?.FirstName + " " + order.Employee?.LastName)</b>
                            <div class="mt-3">Company</div>
                            <b>@order.Customer?.CompanyName</b>
                        </div>
                    </div>
                </RadzenCard>
            </Draggable>
        </div>
    </div>
</RadzenExample>

@code {
    Order order;

    protected override async Task OnInitializedAsync()
    {
        var query = await (from order in dbContext.Orders
                            .Include("Customer")
                            .Include("Employee")
                           select order).Take(5).ToListAsync();

        order = query.FirstOrDefault();
    }

    Point start;
    string style = "";

    void OnDragStartEnd(DraggableEventArgs args)
    {
        start = new Point() 
        { 
            X = start != null ? args.ClientX - start.X : args.ClientX, 
            Y = start != null ? args.ClientY - start.Y : args.ClientY, 
        };
    }

    void OnDrag(DraggableEventArgs args)
    {
        style = $"position:absolute;z-index:3;left:{args.ClientX - start.X}px;top:{args.ClientY - start.Y}px;width:400px;height:170px;user-select:none;";
    }
}
